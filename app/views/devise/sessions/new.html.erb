<div class="container">
  <br><br>
  <h3 class="center reqtitle">테이블 로그인</h3>
  <p class="center reqsub">테이블 번호와 비밀번호를 입력해 주세요</p>
  <div class="row">
    <div class="col s12 m2"></div>
    <div class="col s12 m8">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :name , "테이블 번호" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "email" %>
        </div>
        <br><br>
        <div class="field">
          <%= f.label :password , "비밀번호" %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
      
        <div class="actions center">
          <%= f.submit "로그인" , class:"btn-large blue lgbtn" %>
        </div>
      <% end %>
    </div>
    <div class="col s12 m2"></div>
  </div>
</div>

<style>
  .lgbtn{
    margin-top:30px;
    font-size:16px;
    color:white;
    font-weight:bold;
  }
</style>